{
  "name": "paymentx",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend POC of a payment processor",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "clean": "rm -rf dist cdk.out",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "cdk:synth": "cdk synth",
    "cdk:diff": "cdk diff",
    "cdk:watch": "cdk watch",
    "cdk:deploy": "cdk deploy --require-approval never",
    "cdk:destroy": "cdk destroy",
    "cdk:bootstrap": "cdk bootstrap",
    "deploy": "npm run type-check && npm run test && npm run cdk:deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.932.0",
    "@aws-sdk/lib-dynamodb": "^3.932.0",
    "@aws-sdk/client-secrets-manager": "^3.932.0",
    "@aws-sdk/client-s3": "^3.932.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.158",
    "@types/node": "^24.10.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "jest": "^30.2.0",
    "@jest/globals": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "aws-cdk": "^2.1031.2",
    "aws-cdk-lib": "^2.224.0",
    "jsonschema": "^1.5.0"
  },
  "engines": {
    "node": ">=20.x",
    "npm": ">=10.x"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless",
    "typescript",
    "iac"
  ],
  "author": "matt",
  "license": "MIT"
}
